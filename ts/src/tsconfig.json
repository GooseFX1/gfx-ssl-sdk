{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "module": "esNext",
    "lib": [
      "dom",
      "es2015"
    ],
    "downlevelIteration": true,
    "outDir": "../dist",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}